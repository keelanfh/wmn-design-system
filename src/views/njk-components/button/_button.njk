{% macro button(type, iconLeft, text, iconRight, disabled=false) %}
<button class="wmn-btn {{ type }}" tabindex="0" {{ disabled }}>
  <span>
    {%if iconLeft %}
    <svg class="wmn-btn__icon--left">
      <use xlink:href="{{ iconLeft }}"></use>
    </svg>
    {% endif %}
    {%if text %}
      {{ text }}
    {% endif %}
    {%if iconRight %}
      <i class="wmn-btn__icon--right {{ iconRight }}"></i>
    {% endif %}
  </span>
</button>
{% endmacro %}
