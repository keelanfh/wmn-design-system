{% macro wmnButton(params) %}
{# Imports #}
{% from "components/icon/_icon.njk" import wmndsIcon %}
{# Set #}
{% set text = params.text if params.text else "Button text" %} {# set button text #}
{% set iconRight = params.iconRight if params.iconRight %} {# set icon right classes #}
{% set iconLeft = params.iconLeft if params.iconLeft %} {# set svg left reference #}
{# set true for button disabled #}
{% if params.disabled %}
  {% set classNames = params.classNames + " wmnds-btn--disabled" %}
{% else %}
  {% set classNames = params.classNames + "" %}
{% endif %}

<button class="wmnds-btn {% if classNames %}{{ classNames }}{% endif %}" tabindex="0" {% if params.disabled %} disabled="disabled" {% endif %}>
    {%- if iconLeft %}
      {{
        wmndsIcon({
          icon: iconLeft,
          class: 'wmnds-btn__icon'
        }) | indent | trim
      }}
    {%- endif -%}

    {{ text }}

    {%- if iconRight %}
      {{
        wmndsIcon({
          icon: iconRight,
          class: 'wmnds-btn__icon wmnds-btn__icon--right'
        }) | indent | trim
      }}
    {%- endif %}
</button>

{% endmacro %}