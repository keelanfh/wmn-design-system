{% macro wmndsDropdown(params) %}

{# Imports #}
{% from "components/form-elements/label/_label.njk" import wmndsLabel %}

<div class="wmnds-fe-dropdown wmnds-grid">
  {{
    wmndsLabel({
      label: 'Dropdown label',
      for: 'dropdown'
    }) | trim
  }}
  <select name="dropdown" id="dropdown" class="wmnds-fe-dropdown__select wmnds-col-1">
    <option value="" selected>Choose from list</option>
    {%- for i in range(1,6) %}
    <option value="{{i}}">Option {{i}}</option>
    {%- endfor %}
  </select>
</div>

{% endmacro %}