{% macro colorPalette(params) %}

<div class="wmnds-col-1 wmnds-col-sm-1-2 wmnds-col-md-1-3 color pad-sm">
  <span class="color__swatch bg-color-{{params.varName}}"></span>
  <div class="wmnds-grid component-details">
    <div class="wmnds-col-1">
      <h4>{{params.name}}</h4>

<pre><code class="scss">{{- "" -}}
// HEX
<span class="color-hex"></span>

// SCSS VAR
$getColor({{params.varName}});

// Class names
.color-{{params.varName}}
.bg-color-{{params.varName -}}
</code></pre>

    </div>
  </div>
</div>

{% endmacro %}